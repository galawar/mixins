extends templates/_layout

block vars
	- array = {body_class: '', layout_mod: '', page_title: 'Test'}

block content_block
	form.form(action='#', method='POST')
		.form-col
			+input({
				mods: `${fields.mods.hiddenLabel}`,
				label: 'Required field',
				class: 'test_mod',
				attrs: {
					id: 'input_1',
					type: 'text',
					name: 'text_field_1',
					placeholder: 'Field placeholder',
					required: true,
					autofocus: true
				}
			})

			+input({
				label: 'Disabled field',
				attrs: {
					id: 'input_2',
					type: 'text',
					name: 'text_field_2',
					placeholder: 'Enter something...',
					disabled: true
				}
			})

			+input({
				label: 'Password field',
				attrs: {
					id: 'input_3',
					type: 'password',
					name: 'password_field_1',
					placeholder: 'Enter password'
				}
			})

			+select({
				label: 'Select field',
				options: ['option 1', 'option 2', 'option 3'],
				attrs: {
					id: 'select_1',
					name: 'select_field_1'
				}
			})

		.form-col
			+textarea({
				label: 'Yor message',
				attrs: {
					id: 'textarea_2',
					name: 'textarea_1',
					cols: 60,
					rows: 5,
					placeholder: 'Enter your message'
				}
			})

			+file({
				label: 'Choose a file...',
				attrs: {
					id: 'file_1',
					type: 'file',
					name: 'file_field_1'
				}
			})

		.form-col
			+checkbox({
				label: 'Checkbox label',
				attrs: {
					id: 'check_1',
					type: 'checkbox',
					name: 'check_1',
					checked: true
				}
			})

			+radiobutton({
				label: 'Yes',
				attrs: {
					id: 'radio_yes',
					type: 'radio',
					name: 'answer'
				}
			})
			+radiobutton({
				label: 'No',
				attrs: {
					id: 'radio_no',
					type: 'radio',
					name: 'answer'
				}
			})
		
		.form-col
			+input({
				label: 'Color field',
				class: '',
				attrs: {
					id: 'color_1',
					type: 'color',
					name: 'color_field_1',
				}
			})

		.form-col
			+input({
				label: 'Date field',
				class: '',
				attrs: {
					id: 'date_1',
					type: 'date',
					name: 'date_field_1',
				}
			})

		.form-col
			+input({
				label: 'Time field',
				class: '',
				attrs: {
					id: 'time_1',
					type: 'time',
					name: 'time_field_1',
				}
			})